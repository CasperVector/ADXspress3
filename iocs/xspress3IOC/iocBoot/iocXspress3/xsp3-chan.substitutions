file "NDTimeSeries.template"
{
pattern { R, PORT, ADDR, TIMEOUT, NDARRAY_PORT, NDARRAY_ADDR, NCHANS }
{ "SCA$(CHAN):TS:", "ATTR$(CHAN)_TS", 0, 1, "ATTR$(CHAN)", 1, "$(MAXFRAMES)" }
}

file "NDROIStat.template"
{
