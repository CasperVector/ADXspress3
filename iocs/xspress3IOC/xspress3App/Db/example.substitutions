file ioc.db
{
pattern {IOCNAME, TODFORMAT}
        {$(XSPRESS3_PREFIX), "%m/%d/%Y %H:%M:%S"}
}

file save_restoreStatus.db
{
pattern {P}
        {$(XSPRESS3_PREFIX):}
}